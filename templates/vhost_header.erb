server {
	listen		<%= listen_ip %>:<%= listen_port %> <% if @listen_options %><%= listen_options %><% end %>;
	server_name	<%= server_names.join(" ") %>;
	access_log	/opt/www/sites/<%= name %>/logs/access.log <%= log_format %>;
	<% if ssl == true %>
	ssl				on;
	ssl_certificate			/opt/ssl/<%= name %>/<%= name %>.crt;
	ssl_certificate_key		/opt/ssl/<%= name %>/<%= name %>.key;
	
	ssl_session_timeout		10m;

	ssl_protocols			SSLv3 TLSv1;
	ssl_ciphers			ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM;
	ssl_prefer_server_ciphers	on;<% end %>
